<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/backgroundFragment</item>
        <item  name="android:buttonStyle">@style/Button</item>

        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionMenuTextColor">@color/textActionBar</item>

        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">28dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="ActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="android:background">@color/backgroundActionBar</item>
    </style>

    <style name="ActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textActionBar</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Fragment">
        <item name="android:background">@color/backgroundFragment</item>
        <item name="android:paddingLeft">@dimen/fragment_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/fragment_horizontal_padding</item>
    </style>

    <style name="Fragment.Grid">
    </style>

    <style name="GridCell">
        <item name="android:background">@color/backgroundGridCell</item>
    </style>

    <style name="GridCell.Box">
        <item name="android:background">@drawable/container_drop_shadow</item>
    </style>

    <style name="GridCell.Image">
        <item name="android:padding">@dimen/grid_cell_image_padding</item>
    </style>

    <style name="GridCell.Description">
        <item name="android:padding">@dimen/grid_cell_description_padding</item>
        <item name="android:textColor">@color/textGridCell</item>
        <item name="android:textSize">@dimen/grid_cell_description_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GridCell.Footer">
        <item name="android:textColor">@color/textGridFooter</item>
        <item name="android:textSize">@dimen/grid_cell_footer_textSize</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/LightSkyBlue</item>
        <item name="android:textSize">@dimen/grid_cell_footer_textSize</item>
        <item name="android:paddingLeft">@dimen/button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
    </style>

    <style name="CommentCell">
        <item name="android:background">@drawable/container_drop_shadow</item>
    </style>

    <style name="CommentCell.WithPadding">
        <item name="android:paddingLeft">@dimen/card_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/card_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/card_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_vertical_padding</item>
    </style>

    <style name="CommentCellTime">
        <item name="android:textColor">@color/textCommentTime</item>
        <item name="android:textSize">@dimen/comment_cell_time_textSize</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@color/buttonGreen</item>
    </style>
    <style name="Button.DarkGreen">
        <item name="android:background">@color/green</item>
    </style>
    <style name="Button.Red" >
        <item name="android:background">@color/buttonRed</item>
    </style>

    <style name="Button.Accept" parent="Button.Green">
    </style>

    <style name="Button.Reject" parent="Button.Red">
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Animations" />
    <style name="Animations.SlideWindow">
        <item name="@android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>
