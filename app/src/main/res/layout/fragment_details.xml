<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabiq.youbid.activity.DetailsActivity$PlaceholderFragment">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/ivProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_toEndOf="@+id/ivProfile"
            android:layout_alignTop="@+id/ivProfile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunnyvale, CA"
            android:id="@+id/tvItemLocation"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvUserName"
            android:layout_alignLeft="@+id/tvUserName"
            android:layout_alignStart="@+id/tvUserName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimePosted"
            android:layout_alignTop="@+id/tvUserName"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <com.parse.ParseImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/ivItemPic"
            android:layout_below="@+id/ivProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvCaption"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivItemPic"
            android:lines="2"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvViewsCount"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/tvItemLocation"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivLike"
            android:layout_below="@+id/ivProfile"
            android:layout_alignRight="@+id/ivItemPic"
            android:layout_alignEnd="@+id/ivItemPic"
            android:layout_margin="20dp"

            android:src="@drawable/ic_launcher" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etBidAmount"
            android:textAlignment="textEnd"
            android:gravity="end"
            android:hint="@string/hint_price"
            android:layout_toLeftOf="@+id/btnBid"
            android:layout_toStartOf="@+id/btnBid"
            android:layout_alignBottom="@+id/btnBid"
            android:layout_alignTop="@+id/btnBid" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBid"
            android:layout_below="@+id/tvCaption"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="BID" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBidStatus"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/btnBid"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivLike"
            />

          <FrameLayout android:id="@+id/flCommentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@id/tvBidStatus"
                android:layout_alignParentRight="true">
            </FrameLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentBox"
        android:layout_alignBottom="@id/scrollView">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/etComments"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="50dp"
            android:paddingLeft="5dp"
            android:hint="@string/hint_add_comment"
            android:background="#EEEEEE"
            android:maxLines="4" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivSendComment"
            android:src="@drawable/ic_comment_send"
            android:layout_alignRight="@id/etComments"
            />
    </RelativeLayout>

</RelativeLayout>
