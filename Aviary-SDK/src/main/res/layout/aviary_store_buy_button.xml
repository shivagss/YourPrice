<?xml version="1.0" encoding="utf-8"?>
<com.aviary.android.feather.sdk.widget.IAPBuyButton xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/aviary_buy_button"
	style="@style/AviaryStoreBuyButton"
	android:layout_height="wrap_content"
	android:layout_width="@dimen/aviary_store_list_buy_button_width">

	<com.aviary.android.feather.sdk.widget.AviaryTextView
		android:duplicateParentState="true"
		android:id="@+id/aviary_buy_button_text"
		style="@style/AviaryStoreBuyButtonTextStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true" />

	<ProgressBar
		android:id="@+id/aviary_buy_button_loader"
		style="?android:attr/progressBarStyleSmallInverse"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminate="true"
		android:indeterminateOnly="true"
		android:layout_centerInParent="true" />

	<View
		android:layout_width="1dip"
		android:layout_height="@dimen/aviary_store_buy_button_min_height" />

</com.aviary.android.feather.sdk.widget.IAPBuyButton>